<%= semantic_form_for [:settings, team] do |f| %>

  <%= f.inputs do %>
    <%= f.input :name, label: 'Team name' %>
    <%= f.input :description, input_html: { rows: 2 } %>
    <%= f.input :user_ids, as: :select,
                           multiple: true,
                           collection: available_users,
                           label: 'Team members',
                           input_html: {
                             'data-module' => 'chosen',
                           } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit,  button_html: { class: 'btn btn-primary' } %>
  <% end %>

<% end %>
