<%= semantic_form_for [:settings, user] do |f| %>

  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :roles, as: :select,
                        multiple: true,
                        collection: User::ROLES,
                        input_html: {
                          'data-module' => 'chosen',
                        } %>
  <% end %>

  <% if f.object.new_record? %>
    <%= f.inputs do %>
      <%= f.input :password %>
      <%= f.input :password_confirmation, required: true %>
    <% end %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit,  button_html: { class: 'btn btn-primary' } %>
  <% end %>

<% end %>
