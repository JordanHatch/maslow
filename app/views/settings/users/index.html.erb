<section class="users">
  <header>
    <h1>Users</h1>

    <div class="actions">
      <%= link_to 'Add new user', new_settings_user_path, class: 'btn btn-primary' %>
    </div>
  </header>

  <table class="editable-resource-list">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Roles</th>
        <th scope="col">Teams</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'user', collection: users %>
    </tbody>
  </table>
</section>
