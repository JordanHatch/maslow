<div class="closed-need">
  <div class="message">
    <h2>This need has been closed</h2>
    <p>
      It is a duplicate of
      <%= link_to "#{need.canonical_need_id}: #{canonical_need_goal(need)}", need_path(need.canonical_need) %>.
    </p>
  </div>

  <% if current_user.can?(:reopen, Need) %>
    <div class="reopen-action">
      <p>If this need is no longer a duplicate, you can re-open it.</p>
      <%= button_to "Reopen this need",
                    reopen_need_path(need),
                    method: "delete" %>
    </div>
  <% end %>
</div>
