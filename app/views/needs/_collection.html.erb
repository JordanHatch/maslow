<div class="need-count">
  <em><%= collection.count %></em>
  <%= "need".pluralize(collection.count) %>
</div>

<table class="table table-striped table-bordered" id="needs">
  <thead>
    <tr class="table-header">
      <th></th>
      <th>Need ID</th>
      <th>I need to&hellip;</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "needs/need_row", collection: collection, as: :need %>
  </tbody>
</table>
