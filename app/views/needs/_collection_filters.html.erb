<h2>Filter needs</h2>

<%= form_tag needs_path, method: :get do %>
  <ul class="filter-list">
  <% available_filters.each do |filter| %>
    <li class="filter-type filter-type-<%= filter.type %>">
      <%= render partial: "needs/filterable/#{filter.type}_filter", locals: { filter: filter } %>
    </li>
  <% end %>
  </ul>

  <%= button_tag 'Update filters', type: :submit %>
<% end %>

<% if active_filters.any? %>
  <%= button_to 'Reset filters', needs_path, method: :get, class: 'button-reset' %>
<% end %>
